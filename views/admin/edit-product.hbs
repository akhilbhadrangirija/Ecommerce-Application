<section>
    <div class="container mt-4">
        <div class="rwo">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>

                <form action="/admin/view-products" enctype="multipart/form-data" method="POST" >
                        <label for="">Name</label>
                        <input value="{{response.Name}}" type="text" class="form-control" name="Name" placeholder="Product name">
                   
                        <label for="">Category</label>
                        <input value="{{response.Category}}" type="text" name="Category" class="form-control">

                        <label for="">Price</label>
                        <input value="{{response.Price}}" type="text" name="Price" class="form-control">

                        <label for="">Description</label>
                        <input value="{{response.Description}}" type="text" name="Description" class="form-control">

                        <label for="Image">Image</label>
                        <input value="" type="file" name="Image" class="form-control">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>